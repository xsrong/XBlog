<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to("XBlog", root_path, id: "logo") %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to("Home", root_path) %></li>
        <% if user_signed_in? %>
          <li><%= link_to("New Post", new_post_path) %></li>
          <li class="dropdown" id="header-dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.nickname %>
            </a>
            <ul class="dropdown-menu" id="header-dropdown-menu">
              <li><%= link_to("Profile", "/users/#{current_user.nickname}") %></li>
              <li><%= link_to("Edit Info", edit_user_registration_path) %></li>
              <li><%= link_to("Notifications", "/users/#{current_user.nickname}") %></li>
              <li class="divider"></li>
              <li><%= link_to("Logout", destroy_user_session_path, method: :delete) %>
            </ul>
          </li>
        <% else %>
          <li><%= link_to("Login", new_user_session_path) %></li>
          <li><%= link_to("Sign Up", new_user_registration_path) %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>